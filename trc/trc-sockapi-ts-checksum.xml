<test name="checksum" type="package">
  <objective>IP/TCP/UDP checksum tests</objective>
  <notes/>
  <iter result="PASSED">
    <notes/>
    <test name="tcp_bad_csum_open" type="script">
      <objective>Send ACK or SYNACK segments with invalid checksum and check that IUT ignores it</objective>
      <notes/>
      <iter result="PASSED">
        <arg name="csum_val"/>
        <arg name="env"/>
        <arg name="protocol"/>
        <arg name="segment">SYNACK</arg>
        <notes/>
        <results tags="af_xdp" key="11837">
          <result value="FAILED">
            <verdict>IUT sent ACK in response to segment with invalid checksum and successfully established TCP connection</verdict>
          </result>
        </results>
      </iter>
      <iter result="PASSED">
        <arg name="csum_val"/>
        <arg name="env"/>
        <arg name="protocol"/>
        <arg name="segment">SYN</arg>
        <notes/>
        <results tags="af_xdp" key="11837">
          <result value="FAILED">
            <verdict>IUT sent SYN-ACK in response to segment with invalid checksum and successfully established TCP connection</verdict>
          </result>
        </results>
      </iter>
    </test>
    <test name="bad_udp_csum" type="script">
      <objective>Check that socket receives packets with correct or zero checksum and drops packets with bad checksum.</objective>
      <notes/>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer</arg>
        <arg name="fragmented">TRUE</arg>
        <arg name="mtu_size"/>
        <notes/>
        <results tags="v5">
          <result value="FAILED" key="ON-12870">
            <verdict>IUT socket is readable but it should not be</verdict>
            <verdict>recv() on IUT unexpectedly failed with error RPC-EAGAIN</verdict>
          </result>
          <result value="PASSED"/>
        </results>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer_ipv6</arg>
        <arg name="fragmented">TRUE</arg>
        <arg name="mtu_size"/>
        <notes/>
        <results tags="v5">
          <result value="FAILED" key="ON-12870">
            <verdict>IUT socket is readable but it should not be</verdict>
            <verdict>recv() on IUT unexpectedly failed with error RPC-EAGAIN</verdict>
          </result>
          <result value="PASSED"/>
        </results>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer_tst</arg>
        <arg name="fragmented"/>
        <arg name="mtu_size"/>
        <notes/>
        <results tags="v5&amp;laddr_all" key="ON-12870">
          <result value="FAILED">
            <verdict>IUT socket is readable but it should not be</verdict>
            <verdict>recv() on IUT unexpectedly failed with error RPC-EAGAIN</verdict>
          </result>
          <result value="PASSED"/>
        </results>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer_tst_ipv6</arg>
        <arg name="fragmented"/>
        <arg name="mtu_size"/>
        <notes/>
        <results tags="v5&amp;laddr_all" key="ON-12870">
          <result value="FAILED">
            <verdict>IUT socket is readable but it should not be</verdict>
            <verdict>recv() on IUT unexpectedly failed with error RPC-EAGAIN</verdict>
          </result>
          <result value="PASSED"/>
        </results>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer</arg>
        <arg name="fragmented">FALSE</arg>
        <arg name="mtu_size"/>
        <notes/>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">bad</arg>
        <arg name="env">VAR.env.peer2peer_ipv6</arg>
        <arg name="fragmented">FALSE</arg>
        <arg name="mtu_size"/>
        <notes/>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">correct</arg>
        <arg name="env"/>
        <arg name="fragmented"/>
        <arg name="mtu_size"/>
        <notes/>
      </iter>
      <iter result="PASSED">
        <arg name="checksum">zero</arg>
        <arg name="env"/>
        <arg name="fragmented"/>
        <arg name="mtu_size"/>
        <notes/>
      </iter>
    </test>
  </iter>
</test>
