        <arg name="env"/>
        <arg name="peers_num"/>
        <arg name="max_data_len">20000</arg>
        <arg name="diff_addrs"/>
        <arg name="recv_func"/>
        <notes/>
        <results tags="v5" notes="Fragmented datagrams are received via OS and retrieved after non-fragmented ones">
          <result value="PASSED"/>
          <result value="FAILED">
            <verdict>Some packets were received out of order</verdict>
          </result>
        </results>
      </iter>
    </test>
